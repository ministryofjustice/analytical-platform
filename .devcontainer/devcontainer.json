{
  "name": "ministryofjustice-data-platform-devcontainer",
  "build": { 
    "dockerfile": "src/Dockerfile",
    "args": {
      "MOJ_DATA_PLATFORM_AWS_IAM_EMAIL": "${localEnv:MOJ_DATA_PLATFORM_AWS_IAM_EMAIL}"
    }
  },
  "features": {
    // devcontainer features, see https://github.com/devcontainers/features/tree/main/src/<feature>
    "ghcr.io/devcontainers/features/common-utils:2": { "configureZshAsDefaultShell": true },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    // local features
    "./features/src/aws": {},
    "./features/src/aws-vault": {},
    "./features/src/direnv": {},
    "./features/src/flux": {},
    "./features/src/helm": {},
    "./features/src/kubectl": {},
    "./features/src/kubelint": {},
    "./features/src/kubent": {},
    "./features/src/terraform": {}
  },
  "remoteUser": "vscode",
  "runArgs": [ "--name=ministryofjustice-data-platform-devcontainer" ],
  "mounts": [
    { "source": "ministryofjustice-data-platform-devcontainer-workspace", "target": "/home/vscode/workspace", "type": "volume" },
    { "source": "ministryofjustice-data-platform-devcontainer-commandhistory", "target": "/home/vscode/.commandhistory", "type": "volume" },
    { "source": "ministryofjustice-data-platform-devcontainer-awsvault", "target": "/home/vscode/.awsvault", "type": "volume" }
  ],
  "workspaceFolder": "/home/vscode/workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "GitHub.copilot",
        "GitHub.vscode-pull-request-github"
      ]
    }
  }
}
