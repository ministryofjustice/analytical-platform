{
  "id": "policy-tools",
  "version": "1.0.0",
  "name": "policy-tools",
  "description": "Policy Tools - OPA, Conftest",
  "options": {
    "installOpa": {
      "type": "boolean",
      "description": "OPA (https://github.com/open-policy-agent/opa)",
      "default": true
    },
    "opaVersion": {
      "type": "string",
      "description": "OPA version",
      "proposals": ["latest"],
      "default": "latest"
    },
    "installConftest": {
      "type": "boolean",
      "description": "Conftest (https://github.com/open-policy-agent/conftest)",
      "default": true
    },
    "conftestVersion": {
      "type": "string",
      "description": "Conftest version",
      "proposals": ["latest"],
      "default": "latest"
    },
    "installGator": {
      "type": "boolean",
      "description": "Gator (https://github.com/open-policy-agent/gatekeeper)",
      "default": true
    },
    "gatorVersion": {
      "type": "string",
      "description": "Gator version",
      "proposals": ["latest"],
      "default": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": ["tsandall.opa"]
    }
  },
  "installsAfter": ["./features/src/base"]
}
