{
  "id": "terraform-tools",
  "version": "1.0.0",
  "name": "terraform-tools",
  "description": "Terraform Tools - Terraform Switcher, Terraform Docs, hcl2json, tfsec, infracost",
  "options": {
    "installTerraformSwitcher": {
      "type": "boolean",
      "description": "Install Terraform Switcher (https://github.com/warrensbox/terraform-switcher)",
      "default": true
    },
    "terraformSwitcherVersion": {
      "type": "string",
      "description": "Terraform Switcher version",
      "proposals": ["latest"],
      "default": "latest"
    },
    "terraformVersion": {
      "type": "string",
      "description": "Terraform version",
      "proposals": ["latest"],
      "default": "latest"
    },
    "installTerraformDocs": {
      "type": "boolean",
      "description": "Install terraform-docs (https://github.com/terraform-docs/terraform-docs)",
      "default": true
    },
    "terraformDocsVersion": {
      "type": "string",
      "description": "Terraform Docs version",
      "proposals": ["latest"],
      "default": "latest"
    },
    "installHcl2json": {
      "type": "boolean",
      "description": "Install hcl2json (https://github.com/tmccombs/hcl2json)",
      "default": true
    },
    "hcl2jsonVersion": {
      "type": "string",
      "description": "hcl2json version",
      "proposals": ["latest"],
      "default": "latest"
    },
    "installTfsec": {
      "type": "boolean",
      "description": "Install tfsec (https://github.com/aquasecurity/tfsec)",
      "default": true
    },
    "tfsecVersion": {
      "type": "string",
      "description": "hcl2json version",
      "proposals": ["latest"],
      "default": "latest"
    },
    "installInfracost": {
      "type": "boolean",
      "description": "Install Infracost (https://github.com/infracost/infracost)",
      "default": true
    },
    "infracostVersion": {
      "type": "string",
      "description": "Infracost version",
      "proposals": ["latest"],
      "default": "latest"
    }
  },
  "mounts": [{ "source": "ministryofjustice-data-platform-devcontainer-infracost", "target": "/home/vscode/.config/infracost", "type": "volume" }],
  "customizations": {
    "vscode": {
      "extensions": ["hashicorp.terraform", "Infracost.infracost"],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "hashicorp.terraform",
        "files.associations": {
          "*.yml.tftpl": "yaml"
        }
      }
    }
  },
  "installsAfter": ["./features/src/base"]
}
