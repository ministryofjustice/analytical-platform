{
  "id": "terraform-tools",
  "version": "1.0.0",
  "name": "terraform-tools",
  "description": "Terraform Tools - Terraform",
  "options": {
    "installTerraform": {
      "type": "boolean",
      "description": "Install Terraform Switcher (https://github.com/hashicorp/terraform)",
      "default": true
    },
    "terraformVersion": {
      "type": "string",
      "description": "Terraform version",
      "proposals": ["latest"],
      "default": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": ["hashicorp.terraform"]
    }
  },
  "installsAfter": ["./features/src/base"]
}
