{
  "name": "markdown-it-govuk",
  "version": "0.1.3",
  "description": "Plugin for markdown-it to convert Markdown into GOV.UK Frontend-compliant HTML",
  "keywords": [
    "govuk",
    "markdown-it-plugin",
    "markdown-it",
    "markdown"
  ],
  "homepage": "https://github.com/x-govuk/markdown-it-govuk#readme",
  "bugs": {
    "url": "https://github.com/x-govuk/markdown-it-govuk/issues"
  },
  "license": "MIT",
  "files": [
    "lib",
    "x-govuk"
  ],
  "main": "index.js",
  "sass": "x-govuk/all.scss",
  "repository": {
    "type": "git",
    "url": "https://github.com/x-govuk/markdown-it-govuk.git"
  },
  "scripts": {
    "lint": "standard && stylelint 'x-govuk/**/*.scss'",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "coverage": "c8 mocha"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "highlight.js": "^11.5.0"
  },
  "devDependencies": {
    "c8": "^7.11.0",
    "markdown-it": "^13.0.1",
    "markdown-it-testgen": "^0.1.6",
    "mocha": "^10.0.0",
    "standard": "^17.0.0",
    "stylelint": "^14.6.1",
    "stylelint-config-gds": "^0.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.js"
    },
    "./highlight": {
      "import": "./lib/highlight.js",
      "require": "./lib/highlight.js"
    }
  },
  "c8": {
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss"
  }
}
